{
  "name": "react-text-mask-hoc",
  "version": "0.8.0",
  "description": "A higher-order text-mask component for React and React Native.",
  "author": "Vlad Zhukov (http://github.com/Vlad-Zhukov)",
  "license": "MIT",
  "repository": "Vlad-Zhukov/react-text-mask-hoc",
  "bugs": {
    "url": "https://github.com/Vlad-Zhukov/react-text-mask-hoc/issues"
  },
  "main": "./dist/react-text-mask-hoc.cjs.js",
  "module": "./dist/react-text-mask-hoc.esm.js",
  "jsnext:main": "./dist/react-text-mask-hoc.esm.js",
  "scripts": {
    "build": "rimraf dist/ && cross-env NODE_ENV=production node ./rollup.js",
    "test": "jest",
    "lint": "eslint \"**/*.js\"",
    "prettier": "prettier-eslint \"**/*.js\" --write",
    "prepublishOnly": "yarn run lint && yarn run build && yarn run test"
  },
  "dependencies": {
    "hoist-non-react-statics": "^2.3.0",
    "prop-types": "^15.5.10",
    "react-shallow-equal": "^0.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.0",
    "eslint-plugin-react": "^7.2.1",
    "jest": "^20.0.4",
    "prettier-eslint-cli": "^4.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-native": "^0.45.1",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "rollup": "0.47.6",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "text-mask-addons": "^3.6.0",
    "text-mask-core": "^5.0.1"
  },
  "peerDependencies": {
    "react": ">=15"
  },
  "keywords": [
    "react",
    "react-native",
    "text-mask",
    "react-text-mask",
    "react-component",
    "react hoc",
    "hoc",
    "text mask",
    "input mask",
    "string mask",
    "input formatting",
    "text formatting",
    "string formatting"
  ],
  "files": [
    "src",
    "dist",
    "ReactNative.js"
  ],
  "jest": {
    "roots": [
      "<rootDir>/__tests__/"
    ],
    "transformIgnorePatterns": [
      "/node_modules((?!text-mask-core).)*$/"
    ]
  }
}
